{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2015"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "api",
    "paths": {
      "@/*": ["*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true
  },
  "include": ["api/**/*"]
}
